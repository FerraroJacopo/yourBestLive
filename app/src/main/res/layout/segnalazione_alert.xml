<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_border"
    android:id="@+id/donation_alert_dialog"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_donazione"
        android:text="Report"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/rosso"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/linea"
        android:background="@color/rosso"
        android:layout_below="@id/title_donazione"/>


    <EditText
        android:id="@+id/text"
        style="@style/TextLabel"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linea"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="We'll do our best\nfor solving your problem. "
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:gravity="center">

        <Button
            android:id="@+id/annulla_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border"
            android:text="Cancel"
            android:textColor="@color/rosso" />

        <Button
            android:id="@+id/dona_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/border"
            android:text="Send"
            android:textColor="@color/rosso" />
    </LinearLayout>


</RelativeLayout>