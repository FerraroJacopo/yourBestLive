<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_border"
    android:id="@+id/donation_alert_dialog"
    android:padding="16dp">


    <TextView
        android:id="@+id/title_donazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@color/rosso"
        android:textSize="22dp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/linea"
        android:background="@color/rosso"
        android:layout_below="@id/title_donazione"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:text="You first have to log in to continue"
            android:textColor="@color/rosso"
            android:textSize="20sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/annulla_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border"
            android:text="Cancel"
            android:textColor="@color/rosso" />

        <Button
            android:id="@+id/accedi_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/border"
            android:text="Log In"
            android:textColor="@color/rosso" />
        </LinearLayout>

</RelativeLayout>